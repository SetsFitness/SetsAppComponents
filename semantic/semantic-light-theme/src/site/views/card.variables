/*******************************
    User Variable Overrides
*******************************/

@background: #FFFFFF;
@linkHoverBackground: darken(@background, 2%);

@gradient: linear-gradient(135deg, #7F47AE, #7D82B8);

@borderWidth: 0;

/* Header */
@headerColor: @textColor;

/* Description */
@descriptionColor: @textColor;

/* Additional Content */
@extraDivider: 1px solid rgba(255, 255, 255, 0.08);